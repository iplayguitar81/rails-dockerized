
<br/>
<div class="row">


<div class="col-12">
    <% @news.each do |news| %>
  
        <h3><%= news.title.titleize %></h3>

        <h5 class="text-muted"><%= news.subtitle.titleize %></h5>
        <p><%= news.published.strftime("%B %d, %Y") %></p>
       <%= image_tag news.cover_picture.variant(resize: "200x200", bordercolor: "red", border: "5%x5%"), :class => "img-fluid" %>
<!--        <%= image_tag news.cover_picture.variant( combine_options: {
    gravity: 'center',
    draw: 'image Over 0,0 0,0 "'+news.subtitle+'"'
  }), :class => "img-fluid" %> -->
        
        <p><%= news.body %></p>
        <p><%= link_to 'Show', news %></p>
        <hr/>


    <% end %>
</div>




</div>
